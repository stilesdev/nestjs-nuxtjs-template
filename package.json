{
    "name": "nestjs-nuxtjs-template",
    "version": "1.0.0",
    "private": true,
    "scripts": {
        "dev": "NODE_ENV=development concurrently npm:dev:client npm:dev:server",
        "dev:client": "nuxt",
        "dev:server": "nest start --debug --watch",
        "prebuild": "rimraf .nest .nuxt .nuxt-dist",
        "build": "NODE_ENV=production npm run build:client && npm run build:server",
        "build:client": "nuxt generate",
        "build:server": "nest build",
        "start": "NODE_ENV=production nest start",
        "lint": "eslint --ext \".ts,.js,.vue\" --ignore-path .gitignore .",
        "format": "prettier --write \"server/**/*.ts\" \"client/**/*.(js|ts|vue)\"",
        "test": "npm run test:client && npm run test:server && npm run test:e2e",
        "test:client": "jest",
        "test:server": "jest --config jest-server.config.js",
        "test:e2e": "jest --config server/test/jest-e2e.json"
    },
    "dependencies": {
        "@nestjs/common": "^7.6.18",
        "@nestjs/core": "^7.6.18",
        "@nestjs/platform-express": "^7.6.18",
        "@nuxtjs/axios": "^5.13.6",
        "@nuxtjs/pwa": "^3.3.5",
        "core-js": "^3.15.1",
        "http-proxy-middleware": "^2.0.1",
        "nuxt": "^2.15.7",
        "reflect-metadata": "^0.1.13",
        "rxjs": "^6.6.6",
        "vue-class-component": "^7.2.6",
        "vue-property-decorator": "^9.1.2"
    },
    "devDependencies": {
        "@babel/eslint-parser": "^7.14.7",
        "@nestjs/cli": "^7.6.0",
        "@nestjs/schematics": "^7.3.1",
        "@nestjs/testing": "^7.6.18",
        "@nuxt/types": "^2.15.7",
        "@nuxt/typescript-build": "^2.1.0",
        "@nuxtjs/eslint-config-typescript": "^6.0.1",
        "@nuxtjs/eslint-module": "^3.0.2",
        "@types/express": "^4.17.12",
        "@types/jest": "^26.0.23",
        "@types/node": "^16.0.0",
        "@types/supertest": "^2.0.11",
        "@vue/test-utils": "^1.2.1",
        "babel-core": "7.0.0-bridge.0",
        "babel-jest": "^27.0.5",
        "concurrently": "^6.2.0",
        "eslint": "^7.29.0",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-nuxt": "^2.0.0",
        "eslint-plugin-vue": "^7.12.1",
        "jest": "^27.0.5",
        "prettier": "^2.3.2",
        "rimraf": "^3.0.2",
        "supertest": "^6.1.3",
        "ts-jest": "^27.0.3",
        "ts-node": "^10.0.0",
        "vue-jest": "^3.0.4"
    }
}
